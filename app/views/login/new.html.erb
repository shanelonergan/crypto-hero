 <title>Crypto Hero | Login</title>
<h1> Login </h1>

 <% if flash[:errors] %>
    <% flash[:errors].each do |error| %>
        <%=  error %>
    <% end %>
<% end %>

<%= form_tag login_index_path do  %>
    <ul>
        <li>  
            <%= label_tag :username %>
            <%= text_field_tag :username %>
        </li>
        <li>  
            <%= label_tag :password %>
            <%= password_field_tag :password %>
        </li>    
    </ul>
    <%= submit_tag "Login" %>
<% end %>
<%= link_to "Create Account", new_user_path %>

