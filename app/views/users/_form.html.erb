<% if flash[:errors] %>
   <% flash[:errors].each do |error| %>
       <%= error %>
   <% end %>
<% end %>

<%= form_for(@user) do |f| %>
   <%= f.hidden_field :balance, value: 100000.00 %>
   <%= f.label :username %>
   <%= f.text_field :username %>
   <br>
   <%= f.label :password %>
   <%= f.password_field :password %>
   <br>
   <%= f.submit %>
<% end %>
